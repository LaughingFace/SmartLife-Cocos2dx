<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_page_bk_tran"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="250">
        <ImageView
                android:visibility="invisible"
            android:id="@+id/check_power_circle"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/guide_page_check_power_circle"/>
        <ImageView
                android:visibility="invisible"

                android:id="@+id/check_power_socket"
            android:layout_marginTop="-45dp"
            android:layout_gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/guide_page_check_power_socket"/>
        <ImageView
                android:visibility="visible"
                android:id="@+id/check_power_plug"
                android:layout_gravity="center"
                android:layout_width="104dp"
                android:layout_height="240dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/guide_page_check_power_plug" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>
    <TextView
        android:id="@+id/check_power_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="60"
        style="@style/guide_page_text_hint"
        android:text="@string/guidePage_check_power_hint"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>
    <TextView

        android:id="@+id/check_power_finish"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_width="120dp"
        android:layout_weight="35"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/guide_page_check_power_btn"
        style="@style/guide_page_text_normal"
        android:text="@string/guidePage_check_power_btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>
</LinearLayout>
