<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/guide_page_bk_tran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/start_connect_circle"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/guide_page_start_connect_circle"/>
    <ImageView
        android:id="@+id/start_connect_device"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/guide_page_device_icon"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/start_connect_arrow"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="150dp"
        android:rotation="45"
        >
        <ImageView android:id="@+id/route_start_arrow_up"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:src="@drawable/guide_page_arrow1"
            />
        <ImageView android:id="@+id/route_connect_arrow_down"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:src="@drawable/guide_page_arrow2"
            />

    </FrameLayout>
    <ImageView
        android:id="@+id/start_connect_wifi_icon"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/guide_page_wifi_icon" />

    <ImageView
        android:id="@+id/start_connect_phone"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/guide_page_phone" />
    <TextView
        android:id="@+id/start_connect_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="70dp"
        style="@style/guide_page_text_hint"
        android:text="@string/guide_page_start_connect_hint"/>

    <TextView
        style="@style/guide_page_text_normal"
        android:id="@+id/start_connect_finish"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/gudie_page_start_connect_btn_click"
        android:text="@string/guide_page_start_connect_btn"/>
</FrameLayout>



